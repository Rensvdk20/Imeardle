generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = "mysql://127.0.0.1:3306/imeardle"
    relationMode = "prisma"
}

model Playlist {
    id       String @id @default(cuid())
    name     String
    coverUrl String
    Songs    Song[]
}

model Song {
    id         String   @id @default(cuid())
    title      String
    songUrl    String
    coverUrl   String
    playlist   Playlist @relation(fields: [playlistId], references: [id])
    playlistId String

    @@index([playlistId])
}
